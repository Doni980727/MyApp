@model MyApp.Models.Transaction
@{
    ViewData["Title"] = "Shop";
    var item1 = (Item)ViewData["Item1"];
    var item2 = (Item)ViewData["Item2"];
    var item3 = (Item)ViewData["Item3"];
    var item4 = (Item)ViewData["Item4"];
    var item5 = (Item)ViewData["Item5"];
}
<p>Balance: @ViewBag.Balance kr</p>

